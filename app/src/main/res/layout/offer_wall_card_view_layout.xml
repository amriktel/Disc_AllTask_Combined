<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="245dp"
    android:layout_height="140dp"
    android:id="@+id/offer_card"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="8dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_margin="08dp">

    <ImageView
        android:id="@+id/card_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/offercard_background"/>

    <ImageView
        android:id="@+id/gif_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/discount_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="₹100 Discount"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/coupon_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="9dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="5dp">

                <TextView
                    android:id="@+id/discount_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get upto ₹100 discount!"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:minLines="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/discount_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif"
                    android:minLines="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:alpha="0.7"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="7dp"
            android:alpha="0.2"
            android:src="@drawable/dotted_line"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_valid_till"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.5"/>

            <TextView
                android:id="@+id/valid_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05/08/2020"
                android:layout_gravity="end"
                android:layout_marginStart="80dp"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>